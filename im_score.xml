  <overlay>
    <placeLogo name="vLogo" x="570" y="808" w="100" h="100" file="none.png" />
    <placeLogo name="hLogo" x="570" y="668" w="100" h="100" file="none.png" />
    
    <shadowText name="vTeamName" x="720" y="690" w="480" h="60" gravity="west" font="_font" color="_white" />
    <shadowText name="hTeamName" x="720" y="830" w="480" h="60" gravity="west" font="_font" color="_white" />
    
    <shadowText name="vScore" x="1200" y="670" w="200" h="110" gravity="center" font="_font" color="_white" />
    <shadowText name="hScore" x="1200" y="810" w="200" h="110" gravity="center" font="_font" color="_white" />
    
    <shadowText name="gameStatus" x="720" y="950" w="390" h="40" gravity="center" font="_fontN" color="_white" />
    
  </overlay>  
  
