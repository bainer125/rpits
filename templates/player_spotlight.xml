<template>
	<name>Player Spotlight</name>
	<description>Player stats with additional facts.</description>
	<geos>
		<placeImage name="teamLogo"		x="150" y="210"		w="740" h="740"		path="{e.h.logo}" padding="70" />
		<blackBox name="body"			x="150" y="200"		w="740" h="730" />
		
		<slantRectangle name="titleBar" x="120" y="150"		w="800" h="100"		color="{e.h.color}" />
		
		<placeImage name="headShot"		x="160" y="260"		w="240" h="270"		path="teams/rpi-mhimgs/JakeSoffer.png" />
		
		<shadowText name="titleText"	x="170" y="155"		w="710" h="90"		gravity="center" font="fontN" color="white" case="upper" text="{e.h.name} Spotlight" />
		
		<shadowText name="stat1"		x="410" y="270"		w="495" h="50"		gravity="west" font="fontN" color="white" text="Record: {e.h.p.num.1.record}" />
		<shadowText name="stat2"		x="410" y="325"		w="495" h="50"		gravity="west" font="fontN" color="white" text="GAA: {e.h.p.num.1.s6}" />
		<shadowText name="stat3"		x="410" y="380"		w="495" h="50"		gravity="west" font="fontN" color="white" text="Save \%: {e.h.p.num.1.s5}" />
		<shadowText name="stat4"		x="410" y="435"		w="495" h="50"		gravity="west" font="fontN" color="white" text="{e.v.p.num.1.hometown}" />
		
		<blackBox name="body2"			x="150" y="535"		w="740" h="395" />
		<slantRectangle name="nameBar"	x="120" y="500"		w="800" h="70"		color="{e.h.color}"/>
		<shadowText name="nameText"		x="170" y="507"		w="710" h="60"		gravity="west" font="fontN" color="white" text="#1 - {e.h.p.num.1.name}" />
		
		<shadowText name="bodyText"		x="170" y="580"		w="710" h="345"		gravity="west" font="fontN" color="white" wordWrap="true" text="This is example text to get you started with the title.\n\nThis title should be able to fit a large amount of text comfortably." />
		
	</geos>
</template>